{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "globalEnv": [
    "PLASMO_PUBLIC_DEV_PORT"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "dist/**",
        "node_modules/.cache/metro/**",
        "next-env.d.ts",
        ".expo/**",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "build:e2e": {},
    "frontend#dev": {
      "dependsOn": [
        "@acme/ui#build"
      ],
      "cache": true
    },
    "frontend#build:e2e": {
      "dependsOn": [
        "@acme/ui#build"
      ],
      "cache": true
    },
    "mobile#test:e2e": {
      "cache": false,
      "dependsOn": [
        "mobile#build:e2e"
      ]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": [
        "build:e2e"
      ]
    },
    "clean": {
      "cache": false,
      "dependsOn": [
        "^clean"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ],
      "outputs": [
        "node_modules/.cache/.prettiercache"
      ],
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ]
    }
  }
}