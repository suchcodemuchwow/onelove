{
  "name": "onelove",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:mobile": "turbo build --filter=\"...{./apps/mobile}\"",
    "build:web": "turbo build --filter=\"...{./apps/web}\"",
    "clean": "pnpm store prune && turbo clean",
    "dev": "turbo dev",
    "dev:mobile": "turbo dev --filter=\"{./apps/mobile}...\"",
    "dev:web": "turbo dev --filter=\"{./apps/web}...\"",
    "format": "prettier --config .prettierrc --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "turbo lint",
    "test": "turbo test"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "8.56.0",
    "prettier": "^3.1.1",
    "turbo": "latest",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.13.1",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  }
}